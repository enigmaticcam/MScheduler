@using MScheduler_BusTier.Concrete
@model List<EditSlot.Baton>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3">
            <label>Title</label>
        </div>
        <div class="col-sm-3">
            <label>Description</label>
        </div>
        <div class="col-sm-3">
            <label>Filler Description</label>
        </div>
        <div class="col-sm-3">
            <label>Sort Number</label>
        </div>
    </div>
    @for (int i = 0; i < Model.Count; i++) {
        <div class="row">
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m[i].Title, new { @class = "form-control" })
            </div>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m[i].Description, new { @class = "form-control" })
            </div>
            <div class="col-sm-3">
                @Html.DisplayTextFor(m => m[i].SlotFillerDescription)
            </div>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m[i].SortNumber, new { @class = "form-control" })
            </div>
        </div>
    }
</div>