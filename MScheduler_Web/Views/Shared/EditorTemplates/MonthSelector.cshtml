@using MScheduler_BusTier.Concrete
@model EditMeetingView.MonthsWithMeetings

<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("AddMonthWithOffset", "EditMeeting", new { offset = -1 })'">@Html.Raw("<-")</button>
<div class="btn-group">
    <button type="button" class="btn btn-success">@Model.MonthName</button>
    <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
    </button>
    <ul class="dropdown-menu" role="menu">
        @for (int i = 0; i < Model.ExtraMonths.Count; i++) {
            if (Model.ExtraMonths[i].IsCurrentMonth) {
                <li class="divider"></li>
                <li><a href="@Url.Action("AddMonthWithOffset", "EditMeeting", new { offset = Model.ExtraMonths[i].MonthOffset})">@Model.ExtraMonths[i].Name</a></li>
                <li class="divider"></li>
            } else {
                <li><a href="@Url.Action("AddMonthWithOffset", "EditMeeting", new { offset = Model.ExtraMonths[i].MonthOffset })">@Model.ExtraMonths[i].Name</a></li>
            }

        }
    </ul>
</div>